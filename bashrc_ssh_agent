# For tmux
SSH_SOCK_SYMLINK="$HOME/.ssh/auth_sock_symlink"
if [ -S "$SSH_AUTH_SOCK" ]; then
  case $SSH_AUTH_SOCK in
    /tmp/*/agent.[0-9]*)
      ln -snf "$SSH_AUTH_SOCK" $SSH_SOCK_SYMLINK && export SSH_AUTH_SOCK=$SSH_SOCK_SYMLINK
  esac
elif [ -S $SSH_SOCK_SYMLINK ]; then
  export SSH_AUTH_SOCK=$SSH_SOCK_SYMLINK
else
  echo "no ssh-agent"
fi

# To avoid duplicated activation
# Source SSH settings, if applicable
SSH_ENV="${HOME}/.ssh_environment"
SSHAGENT=/usr/bin/ssh-agent
SSHAGENTARGS="-s"

function start_agent {
  echo -n "Initialising new SSH agentâ€¦"
    ${SSHAGENT} ${SSHAGENTARGS} >"${SSH_ENV}"
    echo succeeded
    chmod 600 "${SSH_ENV}"
    . "${SSH_ENV}"
    if [ $(find ${HOME}/.ssh -name "id_*" | wc -l) -gt 0 ]; then
      ssh-add $HOME/.ssh/id_*
    fi
}

if [ -f "${SSH_ENV}" ]; then
  . "${SSH_ENV}" >/dev/null
  cnt=$(ps -ef | grep "${SSH_AGENT_PID}" | awk '{print $8}' | grep "[/a-zA-Z0-9]*ssh-agent[ -s]*$" | wc -l)
  [ $cnt -eq 0 ] && start_agent;
  
  if [[ -z `ssh-add -l | grep "${HOME}/.ssh/id_"` ]]; then
    ssh-add $HOME/.ssh/id_*
  fi
else
    start_agent;
fi

