# general settings
ServerAliveInterval 15
ServerAliveCountMax 15
TCPKeepAlive yes
ForwardAgent yes

# inside or outside of FD-network
Match host fd* exec "test $(dig +short zentyal.fairydevices.local | wc -l) -eq 0"
  ProxyCommand ssh -W %h:%p gateway

Host home-rpi
  HostName maxwells.daemon.asia
  User kazuya
  Port 24842

# gateway to fd network
Host gateway
  User mitsutani
  HostName m13000.fairydevices.jp

Host fd-pothos
  HostName 192.168.48.80
  User mitsutani

# momoiro cluster
Host fd-momoiro*
  User mitsutani

Host fd-momoiro01
  HostName 192.168.48.53

Host fd-momoiro02
  HostName 192.168.48.34

